{
  "name": "stylelint-io",
  "version": "0.0.0",
  "private": true,
  "description": "Stylelint's website",
  "homepage": "https://stylelint.io",
  "repository": "https://github.com/stylelint/stylelint.io.git",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/stylelint"
  },
  "license": "MIT",
  "author": "stylelint",
  "scripts": {
    "build": "npm run gendoc && docusaurus build",
    "serve": "docusaurus serve",
    "docusaurus": "docusaurus",
    "format": "prettier . --write",
    "gendoc": "node ./scripts/generate-docs.mjs docs",
    "lint": "npm-run-all --parallel lint:*",
    "lint:css": "stylelint \"**/*.css\" --ignore-path .gitignore ",
    "lint:formatting": "prettier . --check",
    "lint:js": "eslint . --ignore-path .gitignore  --ext .js,.mjs",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "prepare": "husky install",
    "start": "npm run gendoc && docusaurus start --no-open",
    "pretest": "npm run lint",
    "test": "npm run build"
  },
  "lint-staged": {
    "*.css": "stylelint --cache --fix",
    "*.js": "eslint --cache --fix",
    "*.{js,json,md,yml}": "prettier --write"
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": "@stylelint/prettier-config",
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "17.0.2"
      }
    },
    "extends": [
      "stylelint",
      "plugin:react/recommended"
    ],
    "rules": {
      "require-await": "error",
      "n/no-unpublished-import": [
        "error",
        {
          "allowModules": [
            "glob",
            "remark",
            "unist-util-visit"
          ]
        }
      ]
    },
    "root": true
  },
  "remarkConfig": {
    "plugins": [
      "@stylelint/remark-preset"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@docusaurus/core": "^2.4.1",
    "@docusaurus/preset-classic": "^2.4.1",
    "@stylelint/prettier-config": "^3.0.0",
    "@stylelint/remark-preset": "^4.0.0",
    "eslint": "^8.47.0",
    "eslint-config-stylelint": "^20.0.0",
    "eslint-plugin-react": "^7.33.2",
    "glob": "^10.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.28",
    "prettier": "^3.0.2",
    "remark": "^14.0.3",
    "remark-cli": "^11.0.0",
    "remark-gfm": "^3.0.1",
    "stylelint": "https://github.com/stylelint/stylelint/tarball/15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
