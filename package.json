{
  "name": "stylelint-io",
  "version": "0.0.0",
  "private": true,
  "description": "Stylelint's website",
  "homepage": "https://stylelint.io",
  "repository": "https://github.com/stylelint/stylelint.io.git",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/stylelint"
  },
  "license": "MIT",
  "author": "stylelint",
  "scripts": {
    "build": "npm run gendoc && docusaurus build",
    "serve": "docusaurus serve",
    "docusaurus": "docusaurus",
    "format": "prettier . --write",
    "gendoc": "node ./scripts/generate-docs.mjs docs/",
    "lint": "npm-run-all --parallel lint:*",
    "lint:css": "stylelint \"**/*.css\" --ignore-path .gitignore ",
    "lint:formatting": "prettier . --check",
    "lint:js": "eslint .",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "prepare": "husky",
    "start": "npm run gendoc && docusaurus start",
    "pretest": "npm run lint",
    "test": "npm run build"
  },
  "lint-staged": {
    "*.css": "stylelint --cache --fix",
    "*.js": "eslint --cache --fix",
    "*.{js,json,md,yml}": "prettier --write"
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": "@stylelint/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@stylelint/remark-preset"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  },
  "dependencies": {
    "@docusaurus/core": "^3.7.0",
    "@docusaurus/faster": "^3.7.0",
    "@docusaurus/preset-classic": "^3.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@stylelint/prettier-config": "^3.0.0",
    "@stylelint/remark-preset": "^5.1.1",
    "awesome-stylelint": "github:stylelint/awesome-stylelint",
    "eslint": "^9.21.0",
    "eslint-config-stylelint": "^23.0.0",
    "eslint-plugin-react": "^7.37.4",
    "glob": "^11.0.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "prettier": "^3.5.2",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "remark-gfm": "^4.0.1",
    "remark-github-admonitions-to-directives": "^2.1.0",
    "stylelint": "https://github.com/stylelint/stylelint/tarball/16.17.0",
    "stylelint-config-standard": "^37.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
