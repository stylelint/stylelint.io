{
  "private": true,
  "name": "stylelint-io",
  "description": "A mighty, modern CSS linter that helps you enforce consistent conventions and avoid errors in your stylesheets.",
  "homepage": "https://stylelint.io",
  "license": "MIT",
  "repository": "https://github.com/stylelint/stylelint.io.git",
  "scripts": {
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:css": "stylelint --ignore-path .gitignore \"**/*.css\"",
    "lint": "npm-run-all --parallel lint:*",
    "prettier:check": "prettier '**/*.js' --list-different",
    "prettier:fix": "prettier '**/*.js' --write",
    "pregendoc": "rimraf docs",
    "gendoc": "node ./scripts/generate-stylelint-docs docs"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "2019"
    },
    "env": {
      "browser": true,
      "node": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "font-family-name-quotes": "always-where-recommended",
      "function-url-quotes": "always",
      "order/order": [
        "custom-properties",
        "declarations",
        "rules",
        "at-rules"
      ],
      "order/properties-alphabetical-order": true,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "string-quotes": "double"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^6.0.1",
    "eslint-plugin-react": "^7.14.2",
    "glob": "^7.1.4",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "remark": "^10.0.1",
    "remark-inline-links": "^3.1.3",
    "rimraf": "^2.6.3",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^2.2.1",
    "unist-util-visit": "^1.1.1"
  }
}
