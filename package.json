{
  "private": true,
  "name": "stylelint.io",
  "homepage": "http://stylelint.io/",
  "description": "A mighty, modern CSS linter that helps you enforce consistent conventions and avoid errors in your stylesheets.",
  "googleAnalyticsUA": "UA-72480048-1",
  "scripts": {
    "copy-stylelint-docs": "babel-node ./scripts/copy-stylelint-docs",
    "process-stylelint-docs": "babel-node ./scripts/process-stylelint-docs",
    "stylelint-docs": "npm run copy-stylelint-docs && npm run process-stylelint-docs",
    "lint": "eslint --ignore-path .gitignore . && stylelint web_modules/**/*.css",
    "pretest": "npm run lint",
    "test": "npm run build",
    "statinamic": "cross-env BABEL_DISABLE_CACHE=1 BABEL_ENV=statinamic DEBUG=statinamic:* babel-node scripts/build",
    "prebuild": "npm run stylelint-docs",
    "build": "statinamic build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist -r git@github.com:stylelint/stylelint.github.io.git -b master",
    "prestart": "npm run stylelint-docs",
    "start": "statinamic start"
  },
  "statinamic": {
    "assets": false,
    "CNAME": true
  },
  "babel": {
    "presets": [
      "babel-preset-react",
      "babel-preset-es2015",
      "babel-preset-stage-1"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-i-am-meticulous/react"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "declaration-block-properties-order": [
        [
          "composes"
        ],
        {
          "unspecified": "bottomAlphabetical"
        }
      ]
    }
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.2",
    "babel-eslint": "^6.0.0-beta.6",
    "babel-loader": "^6.2.4",
    "babel-plugin-webpack-loaders": "^0.3.10",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-1": "^6.5.0",
    "css-loader": "^0.23.1",
    "eslint": "^2.4.0",
    "eslint-config-i-am-meticulous": "^3.0.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^4.2.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "fs-extra": "^0.26.7",
    "gh-pages": "^0.11.0",
    "glob": "^7.0.3",
    "highlight.js": "^9.2.0",
    "json-loader": "^0.5.4",
    "postcss-browser-reporter": "^0.4.0",
    "postcss-cssnext": "^2.5.1",
    "postcss-loader": "^0.8.2",
    "postcss-reporter": "^1.3.3",
    "raw-loader": "^0.5.1",
    "statinamic": "^0.9.0",
    "style-loader": "^0.13.0",
    "stylelint": "^5.3.0",
    "stylelint-config-standard": "^5.0.0",
    "webpack": "^1.12.14"
  },
  "dependencies": {
    "history": "^2.0.1",
    "invariant": "^2.2.1",
    "react": "^15.0.0-rc.2",
    "react-dom": "^15.0.0-rc.2",
    "react-google-analytics": "^0.2.0",
    "react-helmet": "^2.3.1",
    "react-redux": "^4.4.1",
    "react-router": "^2.0.1",
    "redux": "^3.3.1",
    "whatwg-fetch": "^0.11.0"
  }
}
