{
  "name": "stylelint-io",
  "version": "0.0.0",
  "private": true,
  "description": "A mighty, modern CSS linter that helps you enforce consistent conventions and avoid errors in your stylesheets.",
  "keywords": [
    "stylelint"
  ],
  "homepage": "https://stylelint.io",
  "repository": "https://github.com/stylelint/stylelint.io.git",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/stylelint"
  },
  "license": "MIT",
  "author": "stylelint",
  "scripts": {
    "build": "npm run gendoc && cd website && NODE_ENV=production npm run build",
    "build:ci": "npm run gendoc && cd website && npm ci && NODE_ENV=production npm run build",
    "format": "prettier . --write",
    "pregendoc": "rimraf docs",
    "gendoc": "node ./scripts/generate-stylelint-docs docs",
    "postinstall": "cd website && npm install",
    "lint": "npm-run-all --parallel lint:*",
    "lint:css": "stylelint \"**/*.css\" --ignore-path .gitignore ",
    "lint:formatting": "prettier . --check",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:packagejson": "npmPkgJsonLint .",
    "start": "npm run gendoc && cd website && npm start",
    "pretest": "npm run lint",
    "test": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": "stylelint --cache --fix",
    "*.js": "eslint --cache --fix",
    "*.{js,json,md,yml}": "prettier --write"
  },
  "prettier": "@stylelint/prettier-config",
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "settings": {
      "react": {
        "version": "16.12"
      }
    },
    "extends": [
      "stylelint",
      "plugin:react/recommended"
    ],
    "rules": {
      "require-await": "error",
      "node/no-unpublished-require": [
        "error",
        {
          "allowModules": [
            "glob",
            "remark",
            "unist-util-visit"
          ]
        }
      ]
    },
    "root": true
  },
  "remarkConfig": {
    "plugins": [
      "@stylelint/remark-preset"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "alpha-value-notation": "percentage",
      "color-function-notation": "modern",
      "font-family-name-quotes": "always-where-recommended",
      "function-url-quotes": "always",
      "hue-degree-notation": "angle",
      "order/order": [
        "custom-properties",
        "declarations",
        "rules",
        "at-rules"
      ],
      "order/properties-alphabetical-order": true,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "string-quotes": "double"
    }
  },
  "devDependencies": {
    "@stylelint/prettier-config": "^2.0.0",
    "@stylelint/remark-preset": "^2.0.0",
    "eslint": "^7.21.0",
    "eslint-config-stylelint": "^13.1.0",
    "eslint-plugin-react": "^7.22.0",
    "glob": "^7.1.6",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "remark": "^13.0.0",
    "remark-cli": "^9.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.11.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "unist-util-visit": "^2.0.3"
  },
  "engines": {
    "node": ">=14.16.0"
  }
}
