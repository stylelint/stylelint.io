{
  "private": true,
  "name": "stylelint.io",
  "homepage": "http://stylelint.io/",
  "description": "A mighty, modern CSS linter that helps you enforce consistent conventions and avoid errors in your stylesheets.",
  "googleAnalyticsUA": "UA-72480048-1",
  "scripts": {
    "lint:js": "eslint --ignore-path .gitignore --fix .",
    "lint:css": "stylelint \"web_modules/**/*.css\"",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "test": "npm run build",
    "predocs": "rimraf content dist",
    "docs:copy": "babel-node ./scripts/copy-stylelint-docs",
    "docs:process": "babel-node ./scripts/process-stylelint-docs",
    "docs": "npm run docs:copy && npm run docs:process",
    "prebuild": "npm run docs",
    "build": "phenomic build",
    "prestart": "npm run docs",
    "start": "phenomic start",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist -r git@github.com:stylelint/stylelint.github.io.git -b master"
  },
  "phenomic": {
    "assets": false,
    "CNAME": true
  },
  "babel": {
    "presets": [
      "babel-preset-react",
      "babel-preset-es2015",
      "babel-preset-stage-1"
    ],
    "env": {
      "production": {
        "presets": [
          "babel-preset-react-optimize"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-i-am-meticulous/react"
    ],
    "rules": {
      "react/prefer-stateless-function": 0
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "declaration-block-properties-order": [
        [
          "composes"
        ],
        {
          "unspecified": "bottomAlphabetical"
        }
      ],
      "font-family-name-quotes": "always-where-recommended",
      "function-url-quotes": "always",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "string-quotes": "double"
    }
  },
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-eslint": "^6.0.3",
    "babel-loader": "^6.2.4",
    "babel-plugin-webpack-loaders": "^0.5.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-1": "^6.5.0",
    "css-loader": "^0.23.1",
    "eslint": "^2.8.0",
    "eslint-config-i-am-meticulous": "^4.2.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^5.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "fs-extra": "^0.30.0",
    "gh-pages": "^0.11.0",
    "glob": "^7.0.3",
    "highlight.js": "^9.3.0",
    "json-loader": "^0.5.4",
    "npm-run-all": "^2.1.2",
    "phenomic": "^0.14.2",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.5.2",
    "postcss-loader": "^0.9.1",
    "postcss-reporter": "^1.3.3",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.1",
    "stylelint": "^6.7.0",
    "stylelint-config-standard": "^9.0.0",
    "webpack": "^1.13.0"
  },
  "dependencies": {
    "history": "^2.1.2",
    "invariant": "^2.2.1",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-google-analytics": "^0.2.0",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.3.0",
    "react-topbar-progress-indicator": "^1.0.0",
    "redux": "^3.5.1",
    "whatwg-fetch": "^0.11.1"
  }
}
