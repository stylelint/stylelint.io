{
  "name": "stylelint-io",
  "version": "0.0.0",
  "private": true,
  "description": "Stylelint's website",
  "homepage": "https://stylelint.io",
  "repository": "https://github.com/stylelint/stylelint.io.git",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/stylelint"
  },
  "license": "MIT",
  "author": "stylelint",
  "scripts": {
    "build": "npm run gendoc && docusaurus build",
    "docusaurus": "docusaurus",
    "format": "prettier . --write",
    "pregendoc": "rimraf docs",
    "gendoc": "node ./scripts/generate-docs.mjs docs",
    "lint": "npm-run-all --parallel lint:*",
    "lint:css": "stylelint \"**/*.css\" --ignore-path .gitignore ",
    "lint:formatting": "prettier . --check",
    "lint:js": "eslint . --ignore-path .gitignore  --ext .js,.mjs",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "prepare": "husky install",
    "start": "npm run gendoc && docusaurus start --no-open",
    "pretest": "npm run lint",
    "test": "npm run build"
  },
  "lint-staged": {
    "*.css": "stylelint --cache --fix",
    "*.js": "eslint --cache --fix",
    "*.{js,json,md,yml}": "prettier --write"
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": "@stylelint/prettier-config",
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "settings": {
      "jest": {
        "version": 27
      },
      "react": {
        "version": "17.0.2"
      }
    },
    "extends": [
      "stylelint",
      "plugin:react/recommended"
    ],
    "rules": {
      "require-await": "error",
      "node/no-unpublished-import": [
        "error",
        {
          "allowModules": [
            "glob",
            "remark",
            "unist-util-visit"
          ]
        }
      ]
    },
    "root": true
  },
  "remarkConfig": {
    "plugins": [
      "@stylelint/remark-preset"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "order/order": [
        "custom-properties",
        "declarations",
        "rules",
        "at-rules"
      ],
      "order/properties-alphabetical-order": true,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@docusaurus/core": "^2.0.0-beta.9",
    "@docusaurus/preset-classic": "^2.0.0-beta.9",
    "@stylelint/prettier-config": "^2.0.0",
    "@stylelint/remark-preset": "^3.0.0",
    "eslint": "^8.4.0",
    "eslint-config-stylelint": "^15.0.0",
    "eslint-plugin-react": "^7.27.1",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.4",
    "prettier": "^2.5.1",
    "remark": "^14.0.2",
    "remark-cli": "^10.0.1",
    "rimraf": "^3.0.2",
    "stylelint": "https://github.com/stylelint/stylelint/tarball/14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "unist-util-visit": "^4.1.0"
  },
  "engines": {
    "node": ">=16"
  }
}
