{
  "private": true,
  "name": "stylelint-io",
  "description": "A mighty, modern CSS linter that helps you enforce consistent conventions and avoid errors in your stylesheets.",
  "homepage": "https://stylelint.io",
  "license": "MIT",
  "repository": "https://github.com/stylelint/stylelint.io.git",
  "engines": {
    "node": ">=10.12.0"
  },
  "scripts": {
    "postinstall": "cd website && npm install",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:css": "stylelint --ignore-path .gitignore \"**/*.css\"",
    "lint": "npm-run-all --parallel lint:*",
    "prettier:check": "prettier . --check --ignore-path .gitignore",
    "prettier:fix": "prettier . --write --ignore-path .gitignore",
    "pretest": "npm run lint",
    "test": "npm run build",
    "pregendoc": "rimraf docs",
    "gendoc": "node ./scripts/generate-stylelint-docs docs",
    "build": "npm run gendoc && cd website && NODE_ENV=production npm run build",
    "build:ci": "npm run gendoc && cd website && npm ci && NODE_ENV=production npm run build",
    "start": "npm run gendoc && cd website && npm start"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "stylelint",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "16.12"
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "require-await": "error",
      "node/no-unpublished-require": [
        "error",
        {
          "allowModules": [
            "glob",
            "remark",
            "unist-util-visit"
          ]
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "font-family-name-quotes": "always-where-recommended",
      "function-url-quotes": "always",
      "order/order": [
        "custom-properties",
        "declarations",
        "rules",
        "at-rules"
      ],
      "order/properties-alphabetical-order": true,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "string-quotes": "double"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.css": "stylelint --cache --fix",
    "*.{js,json,css,md,yml}": "prettier --write"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-stylelint": "^12.0.0",
    "eslint-plugin-react": "^7.19.0",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "remark": "^12.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.3.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "unist-util-visit": "^2.0.2"
  }
}
